{
    "manifest_version": 3,
    "name": "SnapVault",
    "version": "1.0",
    "description": "A sleek screenshot manager that captures and stores your web discoveries with personal notes. Perfect for researchers, designers, and curious minds who want to preserve digital insights.",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "SnapVault - Secure your visual memories"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon32.png",
        "128": "icons/icon64.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}
{
    "manifest_version": 3,
    "name": "LockVault Password Manager",
    "version": "1.0.0",
    "description": "Securely store, organize, and manage login credentials with tags and search functionality",
    "permissions": [
        "storage",
        "tabs"
    ],
    "action": {
        "default_title": "Open LockVault Dashboard"
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}